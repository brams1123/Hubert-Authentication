<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>ContactLists List </h3>
          <a href="/contactlists/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a contactlist</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Number</th>
              <th class="text-center">Email</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < contactlists.length; count++) { %>
            <tr>
              <td class="text-center"><%= contactlists[count].name %></td>
              <td class="text-center"><%= contactlists[count].number %></td>
              <td class="text-center"><%= contactlists[count].email %></td>
              <td class="text-center">
              <a href="/contactlists/<%= contactlists[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
               </td>
              <td class="text-center">
              <a href="/contactlists/delete/<%= contactlists[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


